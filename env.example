# TTS Server Configuration
PORT=3001

# Piper TTS Configuration
# Path to Piper executable (if not in PATH)
PIPER_PATH=piper

# Default model to use
DEFAULT_MODEL=en_US-amy-low.onnx
DEFAULT_CONFIG=en_US-amy-low.onnx.json

# Optional: Set to true to enable debug logging
DEBUG=false

# Optional: Maximum text length for TTS generation
MAX_TEXT_LENGTH=1000

# Optional: Audio file retention time in hours
AUDIO_RETENTION_HOURS=24 